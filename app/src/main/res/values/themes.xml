<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UOFMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextInputLayuout Style -->
    <style name="TextInputLayout_Register" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="boxStrokeColor">@color/selector_textinputlayout_register</item>
        <item name="hintTextColor">?android:attr/textColorHint</item> <!-- border에 표시되는 힌트 색깔 -->
    </style>

    <color name="TextInputLayout_Selector_Enable">#232323</color>
    <color name="TextInputLayout_Selector_Disable">#6A6A6A</color>
    <color name="TextInputLayout_Selector_Focus">#000000</color>

    <!-- TextInputEditText Style -->
    <style name="TextInputEditText_Register">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Go to register screen text style -->
    <style name="colorRegisterText">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <!-- Dialog Theme: FullScreenDialog -->
    <style name="DialogTheme_FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Icons -->
    <drawable name="icon_btnclose">@drawable/icon_btnclose_day</drawable>
    <drawable name="icon_btnback">@drawable/icon_btnback_day</drawable>
    <drawable name="icon_btndelete">@drawable/icon_btndelete_day</drawable>

    <style name="OrderingActivity_Background">
        <item name="android:background">#BDBDBD</item>
    </style>
</resources>