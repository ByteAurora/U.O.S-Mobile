<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UOFMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextInputLayout Style -->
    <style name="TextInputLayout_Register" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#dd000000</item>
        <item name="android:textColorHint">#60000000</item>
        <item name="boxStrokeColor">@color/selector_textinputlayout_register</item>
        <item name="hintTextColor">#89000000</item> <!-- border에 표시되는 힌트 색깔 -->
    </style>

    <color name="TextInputLayout_Selector_Enable">#232323</color>
    <color name="TextInputLayout_Selector_Disable">#6A6A6A</color>
    <color name="TextInputLayout_Selector_Focus">#000000</color>
    <color name="gray">#8C8C8C</color>

    <!-- TextInputEditText Style -->
    <style name="TextInputEditText_Register">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#dd000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Go to register screen text style -->
    <style name="colorRegisterText">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <!-- Dialog Theme: FullScreenDialog -->
    <style name="DialogTheme_FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Icons -->
    <drawable name="icon_btnclose">@drawable/icon_btnclose_day</drawable>
    <drawable name="icon_btnback">@drawable/icon_btnback_day</drawable>
    <drawable name="icon_btndelete">@drawable/icon_btndelete_day</drawable>
    <drawable name="icon_add">@drawable/icon_add_day</drawable>
    <drawable name="icon_remove">@drawable/icon_remove_day</drawable>

    <style name="OrderingActivity_Background">
        <item name="android:background">#BDBDBD</item>
    </style>

    <style name="Anim_FullScreenDialog">
        <item name="android:windowEnterAnimation">@anim/headup_fullscreendialog</item>
        <item name="android:windowExitAnimation">@anim/headdown_fullscreendialog</item>
    </style>
</resources>